<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_general"

    tools:context="com.example.phiin.app_guadalupe.OptionsActivity">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/linearLayout">

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/vendas_button"
                android:layout_margin="15dp"
                android:text="Vendas"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorText"
                android:onClick="sellOnClick"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/production_button"
                android:layout_margin="15dp"
                android:text="Produção"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorText"
                android:onClick="productionOnClick"/>

        </LinearLayout>

</RelativeLayout>
